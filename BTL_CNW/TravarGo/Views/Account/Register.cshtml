
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage_Account.cshtml";
}

<!-- Breadcrumb Section Begin -->
<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="#"><i class="fa fa-home"></i> Home</a>
                    <span>Register</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Form Section Begin -->
<!-- Register Section Begin -->
<div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="register-form">
                    <h2>Register</h2>
                    <form action="RegisAccount" method="post">
                        <div class="group-input">
                            <label for="username">Username *</label>
                            <input type="text" id="username">
                            <label class="fied_user_re"></label>
                        </div>
                        <div class="group-input">
                            <label for="pass">Password *</label>
                            <input type="text" id="pass">
                            <label class="fied_pass_re"></label>
                        </div>
                        <div class="group-input">
                            <label for="con-pass">Confirm Password *</label>
                            <input type="text" id="con-pass">
                            <label class="fied_repass_re"></label>
                        </div>
                        <div class="group-input">
                            <label for="username">Name *</label>
                            <input type="text" id="name_re">
                        </div>
                        <div class="group-input">
                            <label for="username">Sure Name *</label>
                            <input type="text" id="sureName_re">
                        </div>
                        <div class="group-input">
                            <label for="username">Email *</label>
                            <input type="text" id="email_re">
                        </div>
                        <div class="group-input">
                            <label for="username">Phone *</label>
                            <input type="text" id="phone_re">
                        </div>
                        <div class="group-input">
                            <label for="username">Job *</label>
                            <input type="text" id="job_re">
                        </div>
                        <button type="submit" class="site-btn register-btn" id="btn_re_ajax">REGISTER</button>
                        <label class="fied_btn"></label>
                    </form>
                    <div class="switch-login">
                        <a href="@Url.Action("Login","Account")" class="or-login">Or Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register Form Section End -->
