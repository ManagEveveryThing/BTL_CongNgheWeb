
@{
    ViewBag.Title = "Table";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage_admin.cshtml";
    var nation = ViewBag.topNation;
}

@using TravarGo.Models.DB;

@model List<DestinationReview>


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Name Destination</th>
                                    <th>order ID</th>
                                    <th class="text-right">Provice</th>
                                    <th class="text-right">Nation</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DestinationReview item in Model)
                                {
                                    <tr>
                                        <td>@item.tenDD</td>
                                        <td>@item.maDD</td>
                                        <td>@item.tenTinh</td>
                                        <td>@item.tenQG</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="au-card au-card--bg-blue au-card-top-countries m-b-30">
                        <div class="au-card-inner">
                            <div class="table-responsive">
                                <table class="table table-top-countries">
                                    <tbody>
                                        @foreach (Nation item in nation)
                                        {
                                            <tr>
                                                <td>@item.tenQG</td>
                                                <td class="text-right">$119,366.96</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <!-- USER DATA-->
                    <div class="user-data m-b-30">
                        <h3 class="title-3 m-b-30">
                            <i class="zmdi zmdi-account-calendar"></i>user data
                        </h3>
                        <div class="table-responsive table-data">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td>Name</td>
                                        <td>Role</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Customer item in ViewBag.user)
                                    {
                                        <tr>
                                            <td>
                                                <div class="table-data__info">
                                                    <span class="username_fied" hidden>@item.username</span>
                                                    <h6>@item.tenKH @item.hoKH</h6>
                                                    <span>
                                                        <a href="#">@item.email</a>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="rs-select2--trans rs-select2--sm">
                                                    <select class="js-select2 select2-hidden-accessible chose_Role" name="property" tabindex="-1" aria-hidden="true">
                                                        <option selected="selected" disabled>@item.nameQ</option>
                                                        @foreach (PhanQuyen quyen in ViewBag.role)
                                                        {
                                                            <option value="">@quyen.nameQ</option>
                                                        }
                                                    </select>
                                                    <div class="dropDownSelect2"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="user-data__footer">
                            <button class="au-btn au-btn-load">load more</button>
                        </div>
                    </div>
                    <!-- END USER DATA-->
                </div>
                
            </div>
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">data table</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2 select2-hidden-accessible ajax_selected_click" name="property" tabindex="-1" aria-hidden="true">
                                    <option selected="selected" disabled>Table</option>
                                        @foreach (TenCacBang it in ViewBag.tableNameList) //list<tencanBang>
                                        {
                                            <option class="optionChose" name="@it.tenCacBang1">@it.tenCacBang1</option>
                                        }
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                         
                            
                        </div>
                        <div class="table-data__tool-right">
                            <button class="au-btn au-btn-icon au-btn--green au-btn--small ajax_add_item">
                                <i class="zmdi zmdi-plus"></i>add item
                            </button>
                          
                        </div>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <!-- DATA TABLE-->
                    <div class="table-responsive table--no-card m-b-40" id="dataTable">
                        @*@Html.Action("_PartialPage_TableData","Home",new { nametable = "Blog" })*@

                    </div>
                    
                        <!-- END DATA TABLE-->
                    
                </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="modal fade" id="myModal" role="dialog"> </div>
</div>